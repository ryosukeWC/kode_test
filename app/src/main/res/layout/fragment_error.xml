<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.error.view.ErrorFragment"
    android:background="@color/screen_background">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ufo_image_view"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ufo_image"
            android:layout_gravity="center_horizontal"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/up_text"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/error_screen_title"
            android:textColor="@color/black"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/bottom_text_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter"
            android:text="@string/fix_message"
            android:textColor="@color/light_gray_97979B"
            android:textSize="16sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/retry_button"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/purple"
            android:textAlignment="center"
            android:textSize="16sp"
            android:fontFamily="@font/inter"
            android:text="@string/text_retry_button"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>