<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularImageView" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <style name="TabLayoutTextAppearance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/inter_semibold_600</item>
    </style>

    <style name="TabSelectedTextAppearance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/inter_semibold_600</item>
    </style>
    
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_medium_500</item>
        <item name="android:textColorHint">@color/search_hint_gray</item>
        <item name="editTextColor">@color/black</item>

    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/search_hint_gray</item>
    </style>
</resources>